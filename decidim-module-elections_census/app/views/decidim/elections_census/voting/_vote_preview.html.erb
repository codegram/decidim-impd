<div class="row">
  <div class="columns large-12">
    <ul class="accordion mb-m evote__preview"
        data-accordion
        data-multi-expand="true"
        data-allow-all-closed="true">
      <% @form.votes.each do |disability, votes| %>
        <li class="accordion-item evote__preview-question is-active" data-accordion-item>
          <a href="#" class="accordion-title flex--sbc">
            <%= t("decidim.elections_census.voting.vote_options.voting_title", disability_title: t("decidim.elections_census.voting.vote_options.voting_disability_title.#{disability}")) %>
          </a>

          <div class="accordion-content" data-tab-content>
            <strong><%= t(".available_answers") %></strong>

            <ul>
              <% votes.each do |vote| %>
                <% if vote == "blank" %>
                  <li><%= I18n.t("candidates.blank") %></li>
                <% else %>
                  <li><%= I18n.t(vote, scope: "candidates.#{disability}") %></li>
                <% end %>
              <% end %>
            </ul>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<div class="card">
  <div class="card__content">
    <div class="actions">
      <%= decidim_form_for(@form, url: vote_voting_path(edit_vote: true)) do |f| %>
        <%= f.hidden_field :preview, value: false %>
        <%= f.hidden_field :voting_digest %>
        <%= f.hidden_field :voter_id %>
        <%= f.hidden_field :voting_code %>
        <%= invisible_captcha %>
        <% @form.votes.each do |disability, votes| %>
          <% votes.each do |vote| %>
            <%= hidden_field_tag "vote[votes][#{disability}][]", vote %>
          <% end %>
        <% end %>
        <%= f.submit t(".edit"), class: "button expanded secondary", name: "edit_vote" %>
      <% end %>
      <%= decidim_form_for(@form, url: vote_voting_path) do |f| %>
        <%= f.hidden_field :preview, value: false %>
        <%= f.hidden_field :voting_digest %>
        <%= f.hidden_field :voter_id %>
        <%= f.hidden_field :voting_code %>
        <%= invisible_captcha %>
        <% @form.votes.each do |disability, votes| %>
          <% votes.each do |vote| %>
            <%= hidden_field_tag "vote[votes][#{disability}][]", vote %>
          <% end %>
        <% end %>
        <%= f.submit t(".vote"), class: "button expanded", data: {confirm: t(".confirm_vote"), disable: true } %>
      <% end %>
    </div>
  </div>
</div>
